<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.walkover.pos">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <application
        android:name=".Applications.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true">


        <activity
            android:name=".LoginPackage.LoginActivity"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".AdminSlidingPackage.AdminSlidingActivity"
            android:screenOrientation="landscape"
            android:theme="@style/POS_THEME.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>


        <activity
            android:name=".SalesAndInvoicePackage.SalesPageActivity"
            android:screenOrientation="landscape"
            android:theme="@style/POS_THEME.NoActionBar" />

        <activity
            android:name=".OldInvoicePackage.OldSalesActivity"
            android:screenOrientation="landscape"
            android:theme="@style/POS_THEME.NoActionBar" />


        <activity android:name=".Printer.DiscoveryActivity"
            android:screenOrientation="landscape"/>

        <activity android:name=".AdminInvoicePage.InvoiceCreationAdmin"
            android:screenOrientation="landscape"
            android:theme="@style/POS_THEME.NoActionBar"/>
    </application>

</manifest>